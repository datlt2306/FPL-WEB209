{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier", "unused-imports"],
    "rules": {
        "unused-imports/no-unused-imports": "error",
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "always",
                "semi": false,
                "trailingComma": "none",
                "tabWidth": 4,
                "endOfLine": "auto",
                "useTabs": false,
                "singleQuote": true,
                "printWidth": 120,
                "jsxSingleQuote": true
            }
        ]
    }
}
